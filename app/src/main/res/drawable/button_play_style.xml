<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="5dip" android:color="@color/outline_color" />
            <gradient android:angle="-90" android:startColor="@color/pressed_up_color" android:endColor="@color/pressed_down_color"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/outline_color" />
            <solid android:color="@color/down_color"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="5dip" android:color="@color/outline_color" />
            <gradient android:angle="-90" android:startColor="@color/up_color_v1" android:endColor="@color/down_color_v1" />
        </shape>
    </item>
</selector>